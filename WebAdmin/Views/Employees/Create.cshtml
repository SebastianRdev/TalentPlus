@model WebAdmin.ViewModels.Employees.EmployeeCreateViewModel

@{
    ViewData["Title"] = "Create Employee";
}

<div class="max-w-4xl mx-auto p-6 md:p-8">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Create New Employee</h1>
        <a asp-action="Index" class="flex items-center gap-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 transition-colors">
            <span class="material-symbols-outlined">arrow_back</span>
            Back to List
        </a>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-200 dark:border-gray-700 overflow-hidden">
        <form asp-action="Create" class="p-6 md:p-8 space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm font-medium p-4 bg-red-50 dark:bg-red-900/20 rounded-lg"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <!-- Personal Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white border-b pb-2 border-gray-200 dark:border-gray-700">Personal Information</h3>
                    
                    <div>
                        <label asp-for="Documento" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <input asp-for="Documento" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary" />
                        <span asp-validation-for="Documento" class="text-red-500 text-xs"></span>
                    </div>

                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label asp-for="Nombres" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                            <input asp-for="Nombres" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary" />
                            <span asp-validation-for="Nombres" class="text-red-500 text-xs"></span>
                        </div>
                        <div>
                            <label asp-for="Apellidos" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                            <input asp-for="Apellidos" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary" />
                            <span asp-validation-for="Apellidos" class="text-red-500 text-xs"></span>
                        </div>
                    </div>

                    <div>
                        <label asp-for="FechaNacimiento" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <input asp-for="FechaNacimiento" type="date" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary" />
                        <span asp-validation-for="FechaNacimiento" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <input asp-for="Email" type="email" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary" />
                        <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Telefono" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <input asp-for="Telefono" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary" />
                        <span asp-validation-for="Telefono" class="text-red-500 text-xs"></span>
                    </div>
                    
                    <div>
                        <label asp-for="Direccion" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <input asp-for="Direccion" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary" />
                        <span asp-validation-for="Direccion" class="text-red-500 text-xs"></span>
                    </div>
                </div>

                <!-- Job Information -->
                <div class="space-y-4">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white border-b pb-2 border-gray-200 dark:border-gray-700">Job Details</h3>

                    <div>
                        <label asp-for="Cargo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <select asp-for="Cargo" asp-items="Html.GetEnumSelectList<Domain.Enums.Cargo>()" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary">
                            <option value="">Select Position</option>
                        </select>
                        <span asp-validation-for="Cargo" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="Departamento" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <select asp-for="Departamento" asp-items="Html.GetEnumSelectList<Domain.Enums.Departamento>()" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary">
                            <option value="">Select Department</option>
                        </select>
                        <span asp-validation-for="Departamento" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="Salario" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">$</span>
                            <input asp-for="Salario" type="number" step="0.01" class="w-full pl-7 rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary" />
                        </div>
                        <span asp-validation-for="Salario" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="FechaIngreso" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <input asp-for="FechaIngreso" type="date" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary" />
                        <span asp-validation-for="FechaIngreso" class="text-red-500 text-xs"></span>
                    </div>

                    <div>
                        <label asp-for="Estado" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                        <select asp-for="Estado" asp-items="Html.GetEnumSelectList<Domain.Enums.EstadoEmpleado>()" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary">
                            <option value="">Select Status</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-red-500 text-xs"></span>
                    </div>
                </div>
                
                <!-- Additional Info -->
                <div class="md:col-span-2 space-y-4">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white border-b pb-2 border-gray-200 dark:border-gray-700">Additional Information</h3>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label asp-for="NivelEducativo" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                            <select asp-for="NivelEducativo" asp-items="Html.GetEnumSelectList<Domain.Enums.NivelEducativo>()" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary">
                                <option value="">Select Education Level</option>
                            </select>
                            <span asp-validation-for="NivelEducativo" class="text-red-500 text-xs"></span>
                        </div>
                        
                        <div>
                            <label asp-for="PerfilProfesional" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1"></label>
                            <textarea asp-for="PerfilProfesional" rows="3" class="w-full rounded-lg border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-primary focus:border-primary"></textarea>
                            <span asp-validation-for="PerfilProfesional" class="text-red-500 text-xs"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="flex justify-end gap-4 pt-6 border-t border-gray-200 dark:border-gray-700">
                <a asp-action="Index" class="px-6 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 font-medium hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">Cancel</a>
                <button type="submit" class="px-6 py-2.5 rounded-lg bg-primary text-white font-bold hover:bg-primary/90 transition-colors shadow-lg shadow-primary/30">Create Employee</button>
            </div>
        </form>
    </div>
</div>
